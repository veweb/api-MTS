                                                                       <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/taxifullbkg"
    android:gravity="center"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/identificador"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btn_estadooc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="350dp"
        android:background="@android:color/transparent"
        android:drawableLeft="@drawable/btnocupado"
        android:text="" />

    <Button
        android:id="@+id/btn_salir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="750dp"
        android:layout_marginTop="470dp"
        android:background="@android:color/transparent"
        android:drawableLeft="@drawable/btn_salir" />
   <Button
        android:id="@+id/btn_taximetro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="470dp"
        android:background="@android:color/transparent"
        android:drawableLeft="@drawable/btn_taximetro" />
    <Button
        android:id="@+id/btn_mensajes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="370dp"
        android:layout_marginTop="470dp"
        android:background="@android:color/transparent"
        android:drawableLeft="@drawable/btn_mensajes" />
        
    <Button
        android:id="@+id/btn_fueraServicio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="740dp"
        android:layout_marginTop="365dp"
        android:background="@android:color/transparent"
        android:drawableLeft="@drawable/btn_fservicio" />
    
    <Button
        android:id="@+id/btn_estadolib"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="350dp"
        android:background="@android:color/transparent"
        android:drawableLeft="@drawable/btnlibre" />

    <TextView
        android:id="@+id/estado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="600dp"
        android:layout_marginTop="-10dp"
        android:textSize="60sp"
        android:textAppearance="?android:attr/textAppearanceLarge" />
    <TextView
        android:id="@+id/nmensajes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="400dp"
        android:layout_marginTop="490dp"
        android:textSize="12sp"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/serviciocliente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="380dp"
        android:layout_marginTop="70dp"
        android:background="@drawable/fnd_cliente"
        android:paddingLeft="30dp"
        android:paddingTop="85dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="15sp" />

    <RelativeLayout
        android:id="@+id/anuncios"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:visibility="visible" >
        
    <ImageView
        android:id="@+id/LugarAnuncios"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center_horizontal"
        android:background="#000000"
         />

    <ImageButton
        android:id="@+id/dismiss"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/LugarAnuncios"
        android:background="@drawable/cancelwhite" />
        
    </RelativeLayout>





</FrameLayout>
